@model List<string>

@{
    var bucketUrl = Configuration["AWS:BucketURL"];
}

<h1>AWS Storage S3</h1>

<a asp-action="UploadFile" asp-controller="AWSFiles" class="btn btn-dark">
    Subir archivo
</a>

<ul class="list-group">
    @foreach(string fileName in Model)
    {
        <li class="list-group-item">
            @fileName
            @{
                string url = bucketUrl + fileName;
            }
            <img src="@url" style="width:100xp;height:100px"/>
            <a asp-action="DeleteFile" asp-controller="AWSFiles" 
            asp-route-fileName="@fileName" class="btn btn-danger">
                Eliminar archivo
            </a>
            <a asp-action="GetImagen" asp-controller="AWSFiles"
               asp-route-key="@fileName" class="btn btn-info">
                Get archivo
            </a>
        </li>
    }

</ul>